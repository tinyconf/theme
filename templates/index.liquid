<script>
  $(document).ready(function() {
    var $form = $('#newsletter');

    $form.submit(function() {
      var $emailField = $form.find('input[name="EMAIL"]');

      if ($emailField.val().indexOf('@') == -1) {
        $emailField.focus();
        return false;
      }

      $.ajax({
        url: $form.attr('action'),
        type: 'GET',
        data: $form.serialize(),
        dataType: 'jsonp'
      });

      $('body').addClass('flip');

      return false;
    });
  });
</script>

