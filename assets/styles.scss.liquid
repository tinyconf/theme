$black: #333;
$border: 5px solid $black;
$padding: 1em;
$background-color: #F9FAFB;

body {
  display: flex;
  flex-direction: column;
  justify-content: center;
  background: $background-color url(bg-pattern.svg) repeat center center;
  margin: 1em;
  // align-items: center;
}

img {
  max-width: 100%;
}

.badge {
  max-width: 475px;
  margin: 0 auto;
  text-align: center;
  font-size: 22px;
  font-family: 'Gotham', 'Helvetica Neue';
  text-transform: uppercase;
  position: relative;
  background: #fff;

  // &:hover {
  //   animation-play-state: paused;
  // }

  @media (min-width: 630px) {
    // animation: 5s rotate2 ease-in-out;
    // animation: 7s rotate alternate infinite ease-in-out;
    transform-origin: 50% -10%;
  }
}

.badge--front {
  @media (min-width: 630px) {
    animation: 6s rotate2 ease-in-out;
  }
}

.badge:before {
  content: "";
  display: inline-block;
  width: 4em;
  border: $border;
  margin-top: 1.5em;
  height: .5em;
  background: $background-color;
}

.badge:after {
  content: "";
  background: $black;
  position: absolute;
  bottom: 100%;
  height: 600px;
  width: 3.5em;
  margin-bottom: -2.4em;
  left: 50%;
  margin-left: - 3.5em / 2;
}

.badge-section {
  padding: $padding;

  & + & {
    border-top: $border;
  }
}

.badge-section--logo {
  padding: 2em;
}

.badge-section--meta {
  padding: 0;

  @media (min-width: 490px) {
    display: flex;
  }
}

.badge-section__half {
  padding: $padding;
  box-sizing: border-box;

  @media (max-width: 490px) {
    & + & {
      border-top: $border;
    }
  }

  @media (min-width: 490px) {
    width: 50%;

    & + & {
      border-left: $border;
    }
  }
}

.badge-section--description {
  background: $black;
  color: #fff;
}

.badge-section--newsletter {
  display: flex;
}

.field {
  border: none;
  flex-grow: 1;
  width: 100%;
  font-size: 17px;
  font-family: inherit;

  &:focus {
    outline: none;
  }
}

.btn {
  flex-shrink: 0;
  background: none;
  border: none;
  cursor: pointer;
}

$degrees: 5deg;

@keyframes drop {
  0% {
    transform: rotate(-$degrees) translateY(-200px);
  }
  100% {
    transform: rotate(-$degrees);
  }
}

@keyframes rotate {
  0% {
    transform: rotate(-$degrees);
  }
  100% {
    transform: rotate($degrees);
  }
}

@keyframes rotate2 {
  0% {

  }
  33% {
    transform: rotate(-$degrees);
  }
  66% {
    transform: rotate($degrees);
  }
  100% {
    transform: rotate(0deg);
  }
}


.flip-container {
  perspective: 1000;
  display: flex;
  align-items: center;
  flex-direction: column;
}

.flipper {
  transition: 0.6s;
  transform-style: preserve-3d;
  display: inline-block;
}

.badge {
  -webkit-backface-visibility: hidden;
  margin-top: 2em;
}

.flip .flipper {
  transform: rotateY(180deg);
}

.badge--back {
  transform: rotateY(180deg);
  z-index: 2;
  position: absolute;
  top: 0; bottom: 0; left: 0; right: 0;

  background: $black;
  color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;

  .badge-section {
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .badge-section + .badge-section {
    border-color: #fff;
  }
}

.badge--front {
  border: $border;
}

.badge-section--thank-you {
  flex-grow: 2 !important;
}

.checkmark {
  margin-bottom: 1em;
  display: block;
}

.lower {
  text-transform: none;
  padding: 0 2em;
}
